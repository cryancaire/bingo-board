<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bingo Board</title>
</head>
<style>
    .bingo-board.hide {
        opacity: 0;
        visibility: hidden;
    }

    .bingo-board {
        opacity: 1;
        visibility: visible;
        transition: opacity 0.5s ease, visibility 0.5s ease;
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        max-width: 600px;
        margin: 0 auto;
        padding: 10px;
    }

    .bingo-cell {
        aspect-ratio: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #ccc;
        background-color: #f9f9f9;
        text-align: center;
        font-family: sans-serif;
        padding: 5px;
        word-break: break-word;
        font-size: 14px;
        position: relative;
    }

    .cell-id {
        position: absolute;
        top: 2px;
        left: 2px;
        font-size: 8px;
        color: #888;
        pointer-events: none;
    }

    .selected {
        background-color: #ffcc00;
    }

    @media (max-width: 400px) {
        .bingo-board {
            gap: 5px;
        }

        .bingo-cell {
            font-size: 12px;
        }
    }
</style>

<body>
    <div class="bingo-board">
        <% board.forEach(function(row) { %>
            <% row.forEach(function(cell) { %>
                <div class="bingo-cell <%= cell.selected ? 'selected' : '' %>" id="<%= cell.id %>">
                    <span class="cell-id">
                        <%= cell.id %>
                    </span>
                    <%= cell.text %>
                </div>
                <% }); %>
                    <% }); %>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        var socket = io();
        const cells = document.querySelectorAll('.bingo-cell');

        for (const cell of cells) {
            cell.addEventListener('click', function () {
                const id = this.id;
                const status = this.classList.contains('selected') ? 'selected' : 'unselected';
                socket.emit('toggleCellFromBrowser', id, status);

            });
        }

        socket.on('toggleCell', function (id) {
            const board = document.querySelector('.bingo-board');
            board.classList.remove('hide');

            const cell = document.getElementById(id);
            cell.classList.toggle('selected');

            setTimeout(() => {
                board.classList.add('hide');
            }, 2000);
        });

        socket.on('selectCell', function (id) {
            const board = document.querySelector('.bingo-board');
            board.classList.remove('hide');

            const cell = document.getElementById(id);
            cell.classList.add('selected');

            setTimeout(() => {
                board.classList.add('hide');
            }, 2000);
        });

        socket.on('toggleCellFromBackend', function (id, status) {
            console.log('toggleCellFromBackend', id, status);
            const cell = document.getElementById(id);
            if (status === 'unselected') {
                cell.classList.add('selected');
            } else {
                cell.classList.remove('selected');
            }
        });

        socket.on('toggleVisibility', function () {
            const board = document.querySelector('.bingo-board');
            board.classList.toggle('hide');
        });

        socket.on('resetBoard', function () {
            const board = document.querySelector('.bingo-board');
            const cells = document.querySelectorAll('.bingo-cell');
            for (const cell of cells) {
                cell.classList.remove('selected');
            }
        });
    </script>
</body>

</html>